include /usr/share/cdbs/1/class/perlmodule.mk

# math-image.desktop, not installed by Makefile.PL yet
# probably need desktop-file-utils 0.15-2 for its automatic trigger on
# .desktop files
install/math-image::
	mkdir -p debian/math-image/usr/share/applications
	cp -a math-image.desktop debian/math-image/usr/share/applications
