include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/perlmodule.mk

# instead of makemaker default "math-image.1p"
DEB_MAKEMAKER_USER_FLAGS = MAN1EXT=1

# math-image.desktop installed under /usr/share/perl5/App/MathImage for now,
# link it to the right place.  Probably need desktop-file-utils 0.15-2 for
# its automatic trigger on .desktop files, but no need to "Depends:" that.
DEB_DH_LINK_math-image = \
  usr/share/perl5/App/MathImage/math-image.desktop \
  usr/share/applications/math-image.desktop
